<h1>新規作成ページ</h1>

<%=form_with(model: @tasklist1,local:true) do |f|%>

 <% if @tasklist1.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @tasklist1.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <%=f.label:status,"status"%>
  <%=f.text_field:status %>
 
  <%=f.label:content,"task"%>
  <%=f.text_field:content%>

  <%=f.submit "投稿"%>
<%end%>

<%=link_to "一覧に戻る",tasklist1s_path%>